<?xml version="1.0" encoding="utf-8"?>
<Project>
  <Import Project="Sdk.targets" Sdk="Microsoft.DotNet.Arcade.Sdk" />

  <ItemGroup Condition="'$(TargetFrameworkIdentifier)' == '.NETCoreApp'
                          and $(MicrosoftNETCoreAppRuntimewinx64PackageVersion.StartsWith('$(_TargetFrameworkVersionWithoutV)'))">
    <FrameworkReference
        Update="Microsoft.NETCore.App" 
        TargetingPackVersion="$(MicrosoftNETCoreAppRuntimewinx64PackageVersion)"
        RuntimeFrameworkVersion="$(MicrosoftNETCoreAppRuntimewinx64PackageVersion)" />
  </ItemGroup>
</Project>